<div class="app__back m-3">
  <a href="/" class="primary-color fs-5">
    <i class="fas fa-angle-left"></i>
    Trở lại
  </a>
</div>


<div class="user-infor m-4 justify-content-center">
  <form action="/user-info/change" method="post">
  
    <h5 class="mt-3">Thông tin cá nhân</h5>
    <div class="mb-3 d-flex ">
      <label for="fullname" class="form-label ">Ảnh cá nhân</label>
    <div class="teacher__avatar-container me-4 mb-3">
            <img class="teacher-ava" src="{{user.avatar}}" alt="ảnh">
        </div>
    </div>
    <div class="mb-3 d-flex justify-content-center align-item-center">
      <label for="exampleInputEmail1" class="form-label ">Email</label>
      <input
        type="email"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        value="{{user.email}}"
        name="email"
      />
    </div>
    <div class="mb-3 d-flex justify-content-center align-item-center">
      <label for="fullname" class="form-label ">Họ Và Tên</label>
      <input type="text" class="form-control" name="fullname" id="fullname" value="{{user.fullname}}"/>
    </div>
    <div class="mb-3 d-flex justify-content-center align-item-center">
      <label for="address" class="form-label">Địa Chỉ</label>
      <input type="text" class="form-control" name="address" id="address" value="{{user.address}}"/>
    </div>
    <div class="mb-3 d-flex justify-content-center align-item-center">
      <label for="phonenum" class="form-label">Số Điện Thoại</label>
      <input type="text" class="form-control" name="phoneNumber" id="phonenum" value="{{user.phonenumber}}"/>
    </div>
    <div class="mb-3 d-flex justify-content-center align-item-center">
        <label for="select-gender" class="form-label">Giới tính</label>
      <select class="form-select" id="select-gender" name="gender">
        <option value="">Giới Tính</option>
        <option value="M" {{#if isMale}} selected {{/if}}>Nam</option>
        <option value="F" {{#unless isMale}} selected {{/unless}}>Nữ</option>
      </select>
    </div>
    <button type="submit" class="btn primary-btn primary-color">Lưu thay đổi</button>
  </form>
</div>
