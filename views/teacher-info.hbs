<div class="teacher-nav d-flex justify-content-between align-items-center">
  <div class="teacher-nav-container">
    <a
      href="/teacher/my-courses"
      class="teacher-nav-link primary-color ms-4 me-4"
    >Khóa Học Của Tôi</a>
    <a href="/teacher/information" class="teacher-nav-link primary-color">Thông
      Tin</a>
  </div>
  <a type="button" class="btn primary-btn m-2 me-4">+ Thêm Khóa Học</a>
</div>
<div class="user-infor m-4 justify-content-center">
  <form action="/teacher/information" method="post">
  
    <h5 class="mt-3">Thông tin cá nhân</h5>
    <div class="mb-3 d-flex ">
      <label for="fullname" class="form-label ">Ảnh cá nhân</label>
    <div class="teacher__avatar-container me-4 mb-3">
            <img class="teacher-ava" src="{{teacher.avatar}}" alt="ảnh">
        </div>
    </div>
    <div class="mb-3 d-flex justify-content-center align-item-center">
      <label for="fullname" class="form-label ">Chuyên Ngành</label>
      <input type="text" class="form-control" id="fullname" value="{{teacher.major}}"/>
    </div>
    <div class="mb-3 d-flex justify-content-center align-item-center">
        <label class="form-label" for="floatingTextarea2">Giới thiệu</label>
          <textarea
            class="form-control"
            placeholder="{{teacher.introduction}}"
            id="floatingTextarea2"
            style="height: 150px"
            name="introduction"
          ></textarea>
        </div>
    <button type="submit" class="btn primary-btn primary-color">Lưu thay đổi</button>
  </form>
</div>
